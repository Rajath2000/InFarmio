<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Post"
                android:textColor="@color/darkgreen"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/Post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Enter the title"
                android:inputType="textMultiLine"
                android:textColorLink="@color/darkgreen" />

            <EditText
                android:id="@+id/post_symtoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start|top"
                android:hint="Enter the symptoms"
                android:inputType="textMultiLine"
                android:textColorHighlight="#FFFFFF" />

            <EditText
                android:id="@+id/post_soution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Enter solution"
                android:inputType="textMultiLine"
                android:textColorHighlight="#FFFFFF" />

            <EditText
                android:id="@+id/post_ContactNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Enter contact number"
                android:inputType="phone" />

            <EditText
                android:id="@+id/post_refernces"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Enter external references"
                android:inputType="textMultiLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:id="@+id/post_image"
                    android:layout_width="150dp"
                    android:layout_height="112.5dp"
                    android:src="@drawable/logo1"
                    app:siBorderWidth="0dp"
                    app:siRadius="0dp" />

                <Button
                    android:id="@+id/post_browse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:text="Browse"
                    android:textColor="@color/darkgreen"
                    app:backgroundTint="@color/lightgreen" />
            </LinearLayout>

            <Button
                android:id="@+id/post_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Submit"
                android:textColor="@color/lightgreen"
                app:backgroundTint="@color/darkgreen" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

